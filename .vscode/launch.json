{
    "version": "0.2.0",
    "configurations": [
        {
            "args": [
                "-u",
                "bdd",
                "--timeout",
                "999999",
                "--colors",
                "'${workspaceFolder}/test/**/*.test.js'"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "name": "Mocha all tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "args": [
                "-u",
                "bdd",
                "--timeout",
                "999999",
                "--colors",
                "'${file}'"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "name": "Mocha current test",
            "program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/lib/index.ts",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": ["${workspaceFolder}/wyvr/**/*.js"],
            "autoAttachChildProcesses": true,
            "env": {
                "WYVR_ENV": "dev"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run wyvr",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/lib/index.ts",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": ["${workspaceFolder}/wyvr/**/*.js"],
            "autoAttachChildProcesses": false,
            "env": {
                "WYVR_ENV": "dev"
            }
        }
    ]
}
