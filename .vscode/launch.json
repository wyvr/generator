    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker: Attach to Node",
            "type": "node",
            "request": "attach",
            "host": "0.0.0.0",
            "port": 9229,
            "address": "localhost",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/var/www/html/@wyvr/generator",
            "protocol": "inspector",
            "skipFiles": ["<node_internals>/**/*.js"]
        },
        {
            "name": "Docker: Attach to Node Website",
            "type": "node",
            "request": "attach",
            "host": "0.0.0.0",
            "port": 19230,
            "address": "localhost",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/var/www/html/@wyvr/generator",
            "protocol": "inspector",
            "skipFiles": ["<node_internals>/**/*.js"]
        },
        {
            "args": [
                "-u",
                "bdd",
                "--timeout",
                "999999",
                "--colors",
                "'${workspaceFolder}/test/**/*.test.js'"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "name": "[test] all tests - Mocha",
            "program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
            "request": "launch",
            "skipFiles": ["<node_internals>/**"],
            "type": "node"
        },
        {
            "args": [
                "-u",
                "bdd",
                "--timeout",
                "999999",
                "--colors",
                "'${file}'"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "name": "[test] current test - Mocha",
            "program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
            "request": "launch",
            "skipFiles": ["<node_internals>/**"],
            "type": "node"
        }
    ]
}
