{
    "compilerOptions": {
        "outDir": "./wyvr",
        "allowJs": true,
        "target": "ESNext",
        "lib": ["es2020", "DOM"],
        "moduleResolution": "node",
        "module": "ESNext",
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@root/*": ["./*"],
            "@lib/*": ["src/*"],
            "@config/*": ["config/*"],
            "@src/*": ["src/*"]
        },
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules/*"]
}
